# Sui Network Configuration
SUI_NETWORK=localnet  # Options: localnet, testnet
SUI_RPC_URL=http://127.0.0.1:9000  # Auto-configured from SUI_NETWORK if not set

# Facilitator Configuration
FACILITATOR_PRIVATE_KEY=suiprivkey1...  # Ed25519 private key (export from sui client)
PORT=3001

# Move Contract
PACKAGE_ID=0x...  # Payment contract package ID

# MockUSDC Treasury Owner (localnet only)
# This should be the private key of the address that deployed MockUSDC
# If not set, falls back to FACILITATOR_PRIVATE_KEY
TREASURY_OWNER_PRIVATE_KEY=suiprivkey1...  # Address that owns MockUSDC treasury cap

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_ISSUER=https://pay402.sui

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE=/tmp/facilitator.log

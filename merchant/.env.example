# Demo Merchant - Environment Configuration

# Server
PORT=3002

# Merchant Identity
MERCHANT_NAME=Premium Data Corp
MERCHANT_ADDRESS=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# JWT Signing (EdDSA with Ed25519)
# Generate with: node -e "const {Ed25519Keypair} = require('@mysten/sui/keypairs/ed25519'); const kp = Ed25519Keypair.generate(); console.log('PRIVATE:', Buffer.from(kp.getSecretKey()).toString('base64')); console.log('PUBLIC:', kp.getPublicKey().toSuiAddress());"
MERCHANT_PRIVATE_KEY=your_base64_encoded_ed25519_private_key_here

# Payment Configuration
RESOURCE_PRICE=100000
# Price in microUSDC (100000 = 0.1 USDC with 6 decimals)

# Facilitator (for invoice generation)
FACILITATOR_ADDRESS=0xfedcba0987654321fedcba0987654321fedcba0987654321fedcba0987654321
FACILITATOR_FEE=10000
# Fee in microUSDC (10000 = 0.01 USDC)

# SUI Network
SUI_NETWORK=localnet
# Options: localnet, testnet, mainnet

# Coin Type
COIN_TYPE=0x2::sui::SUI
# For testnet USDC, use the actual USDC package ID

# Invoice Settings
INVOICE_EXPIRY_SECONDS=3600
# How long invoices are valid (1 hour = 3600)
